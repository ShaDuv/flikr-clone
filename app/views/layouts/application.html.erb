<!DOCTYPE html>
<html>
  <head>
    <title>FlickClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
  </head>

  <body>
    <div class="jumbotron">
      <h1>Definitely Not Flickr</h1>
      <nav class="">
        <% if !current_user %>
          <%= link_to "Sign Up", new_user_registration_path %>
          |
          <%= link_to "Sign In", new_user_session_path %>
          <span class="nav-item-center"><%= link_to "View All Photos", root_path %></span>
        <% else %>
          <%= current_user.email %>
          |
          <%= link_to "Sign Out", destroy_user_session_path, :method=>"delete" %>
          <span class="nav-item-center"><%= link_to "View All Photos", root_path %></span>

          <%= link_to "My Photos", user_photos_path(current_user), :class=>"nav-item-right" %>
          <span class="nav-item-right">&nbsp|&nbsp </span>
          <%= link_to "Upload", new_user_photo_path(current_user), :class =>"nav-item-right" %>
        <% end %>

      </nav>
    </div>
    <%= yield %>
  </body>
</html>
